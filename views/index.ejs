<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <title>Voting app</title>
  </head>
  <body>
    <% let total = 0; candidates.forEach((candidate) => { total +=
    parseInt(candidate.votes, 10); }); %>
    <div class="container">
      <div class="row">
        <div class="col-8 offset-2">
          <h1>Vote for you favorite car</h1>
        </div>
      </div>
      <div class="row">
        <% candidates.forEach((candidate) => { %>
        <form id="photo-container" class="photo-container card col-md-4 p3">
          <img
            src="<%= candidate.srcUrl %>"
            alt="<%= candidate.altText %>"
            class="photo card-img-top"
          />
          <h4><%= candidate.name %></h4>
          <% if(notVoted) { %>
          <a
            class="btn btn-primary vote-btn"
            type="button"
            href="/vote/<%= candidate.name %>"
            >Vote</a
          >
          <% } else { %>
          <h5 class="votes-results text-center card-subtitle mb-2 text-muted">
            <%= candidate.votes %> out of <%= total %> votes
          </h5>
          <% } %>
        </form>
        <% }) %>
      </div>
    </div>
  </body>
</html>
